---
- job:
    name: {{ JOB_NAME }}
    project-type: pipeline
    triggers:
      - timed: {% if 'daily-ocp4.3-powervm-p8-max-multimasters' in JOB_NAME %}'1 15 * * *'
        {% elif 'daily-ocp4.3-powervm-p8-min-multimasters' in JOB_NAME %}'1 16 * * * '
        {% elif 'daily-ocp4.3-powervm-p9-max-multimasters' in JOB_NAME %}'1 17 * * * '
        {% elif 'daily-ocp4.3-powervm-p9-min-multimasters' in JOB_NAME %}'30  20 * * *'
        {% elif 'daily-ocp4.4-powervm-p8-max-multimasters' in JOB_NAME %}'1 18  * * *'
        {% elif 'daily-ocp4.4-powervm-p8-min-multimasters' in JOB_NAME %}'1 19  * * *'
        {% elif 'daily-ocp4.4-powervm-p9-max-multimasters' in JOB_NAME %}'1 00  * * * '
        {% elif 'daily-ocp4.4-powervm-p9-min-multimasters' in JOB_NAME %}'30  3  * * *'
        {% elif 'daily-ocp4.5-powervm-p8-max-multimasters' in JOB_NAME %}'30  21  * * *'
        {% elif 'daily-ocp4.5-powervm-p8-min-multimasters' in JOB_NAME %}'30 22 * * *'
        {% elif 'daily-ocp4.5-powervm-p9-max-multimasters' in JOB_NAME %}'1 7 * * * '
        {% elif 'daily-ocp4.5-powervm-p9-min-multimasters' in JOB_NAME %}'1 10 * * *'
        {% elif 'daily-ocp4.3-to-4.4-p8-min-upgrade' in JOB_NAME %}'1 1 * * *'
        {% elif 'daily-ocp4.5-powervm-p9-scale' in JOB_NAME %}'30  13  * * *'
        {% elif 'daily-ocp4.5-powervm-p8-scale' in JOB_NAME %}'1 2 * * *'
        {% elif 'mirror-openshift-release' in JOB_NAME %}'@hourly'
        {% elif 'poll-artifactory' in JOB_NAME %}'@hourly'
        {% elif 'poll-powervc-images' in JOB_NAME %}'@daily'
        {% elif 'cleanup-nodes' in JOB_NAME %}'@hourly'
        {% else %}''
        {% endif %}
    sandbox: true
    pipeline-scm:
      scm:
        - git:
            url: git@github.ibm.com:powercloud-cicd/test-icp-daily.git
            branches:
              - master
            credentials-id: ibm-github
            clean: true
      script-path: {{ JENKINS_FILE }}
